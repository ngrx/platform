package(default_visibility = ["//visibility:public"])

# Needed so that tsconfig.json can be referenced from BUILD rules.
exports_files([
    "tsconfig.json",
    "LICENSE",
])

filegroup(
    name = "node_modules",
    # NB: rxjs is not in this list, because we build it from sources using the
    # label @rxjs//:rxjs
    srcs = glob(["/".join([
        "node_modules",
        pkg,
        "**",
        ext,
    ]) for pkg in [
        "@angular",
        "@angular-devkit",
        "jasmine",
        "jasmine-marbles",
        "typescript",
        "@types",
        "tsickle",
    ] for ext in [
        "*.js",
        "*.json",
        "*.d.ts",
    ]]),
)
