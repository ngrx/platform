{
  "name": "component-store",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "modules/component-store/src",
  "prefix": "ngrx",
  "tags": [],
  "generators": {},
  "targets": {
    "build-package": {
      "executor": "@angular-devkit/build-angular:ng-packagr",
      "options": {
        "tsConfig": "modules/component-store/tsconfig.build.json",
        "project": "modules/component-store/ng-package.json"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx build-package component-store"
          },
          {
            "command": "pnpm exec tsc -p modules/component-store/tsconfig.schematics.json"
          },
          {
            "command": "pnpm exec rimraf node_modules/@ngrx/component-store"
          },
          {
            "command": "pnpm exec mkdirp node_modules/@ngrx/component-store"
          },
          {
            "command": "ncp dist/modules/component-store node_modules/@ngrx/component-store"
          },
          {
            "command": "cpy LICENSE dist/modules/component-store"
          }
        ]
      },
      "outputs": [
        "{workspaceRoot}/dist/modules/component-store",
        "{workspaceRoot}/node_modules/@ngrx/component-store"
      ]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "modules/component-store/*/**/*.ts",
          "modules/component-store/*/**/*.html"
        ]
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@analogjs/vitest-angular:test",
      "dependsOn": ["build"],
      "outputs": ["{workspaceRoot}/coverage/modules/component-store"]
    }
  }
}
