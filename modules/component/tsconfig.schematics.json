{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "stripInternal": true,
    "experimentalDecorators": true,
    "module": "nodenext",
    "target": "es2022",

    "moduleResolution": "nodenext",
    "downlevelIteration": true,
    "outDir": "../../dist/modules/component",
    "paths": {
      "@ngrx/component/schematics-core": ["./schematics-core"],
      "@ngrx/component": ["./src"]
    },
    "sourceMap": true,
    "inlineSources": true,
    "lib": ["ES2022", "dom"],
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["migrations/**/*.ts", "schematics/**/*.ts"],
  "exclude": ["**/*.spec.ts"],
  "angularCompilerOptions": {
    "skipMetadataEmit": true,
    "enableSummariesForJit": false,
    "enableIvy": false
  }
}
