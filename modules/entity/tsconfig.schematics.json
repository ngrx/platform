{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "stripInternal": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "outDir": "../../dist/modules/entity",
    "paths": {
      "@ngrx/entity/schematics-core": ["./schematics-core"]
    },
    "sourceMap": true,
    "inlineSources": true,
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["migrations/**/*.ts", "schematics/**/*.ts"],
  "exclude": ["**/*.spec.ts"],
  "angularCompilerOptions": {
    "skipMetadataEmit": true,
    "enableSummariesForJit": false,
    "enableIvy": false
  }
}
