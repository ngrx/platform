{
  "$schema": "http://json-schema.org/schema",
  "$id": "SchematicsEslintPluginNgRx",
  "title": "eslint-plugin-ngrx schema",
  "type": "object",
  "properties": {
    "config": {
      "description": "The config to be used.",
      "type": "string",
      "default": "all",
      "enum": [
        "all",
        "component-store",
        "effects",
        "operators",
        "signals",
        "store"
      ],
      "x-prompt": {
        "message": "Which ESLint configuration would you like to use?",
        "type": "list",
        "items": [
          {
            "value": "all",
            "label": "all"
          },
          {
            "value": "component-store",
            "label": "component-store"
          },
          {
            "value": "effects",
            "label": "effects"
          },
          {
            "value": "operators",
            "label": "operators"
          },
          {
            "value": "signals",
            "label": "signals"
          },
          {
            "value": "store",
            "label": "store"
          }
        ]
      }
    }
  },
  "required": []
}
