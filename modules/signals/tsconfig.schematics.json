{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "stripInternal": true,
    "experimentalDecorators": true,
    "module": "preserve",
    "moduleResolution": "bundler",
    "downlevelIteration": true,
    "outDir": "../../dist/modules/signals",
    "paths": {
      "@ngrx/signals/schematics-core": ["./schematics-core"],
      "@ngrx/signals": ["./src"]
    },
    "sourceMap": true,
    "inlineSources": true,
    "lib": ["ES2022", "dom"],
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["migrations/**/*.ts", "schematics/**/*.ts"],
  "exclude": ["**/*.spec.ts"],
  "angularCompilerOptions": {
    "skipMetadataEmit": true,
    "enableSummariesForJit": false,
    "enableIvy": false
  }
}
