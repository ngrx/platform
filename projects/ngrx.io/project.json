{
  "name": "docs-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "projects/ngrx.io/src",
  "projectType": "application",
  "prefix": "aio",
  "generators": {},
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "projects/ngrx.io",
        "parallel": false,
        "commands": [
          {
            "command": "pnpm run setup"
          },
          {
            "command": "npm rebuild node-sass"
          },
          {
            "command": "pnpm run build-for next --progress false && pnpm run copy-404-page"
          },
          {
            "command": "pnpm exec cpy ../../projects/ngrx.io/src/extra-files/next/*.* ../../projects/ngrx.io/dist/ngrx.io/"
          },
          {
            "command": "pnpm exec cpy ../../projects/ngrx.io/src/extra-files/next/CNAME ../../projects/ngrx.io/dist/ngrx.io/"
          }
        ]
      },
      "outputs": ["{workspaceRoot}/projects/ngrx.io/dist/ngrx.io"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "projects/ngrx.io",
        "parallel": false,
        "commands": [
          {
            "command": "pnpm install --no-frozen-lockfile"
          },
          {
            "command": "pnpm run test --watch=false"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "projects/ngrx.io/src/*/**/*.ts",
          "projects/ngrx.io/src/*/**/*.html"
        ]
      },
      "outputs": ["{options.outputFile}"]
    }
  },
  "tags": [],
  "implicitDependencies": [
    "store",
    "effects",
    "router-store",
    "store-devtools",
    "entity",
    "data",
    "schematics",
    "component",
    "component-store"
  ]
}
