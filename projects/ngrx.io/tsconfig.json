{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "target": "es2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2016", "dom"]
  },
  "exclude": ["content", "tools", "aio-builds-setup", "node_modules", "scripts"]
}
