{
  "compilerOptions": {
    "importHelpers": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "noImplicitOverride": true,
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"],
    "outDir": "../out-tsc/app",
    "target": "ES2022",
    "module": "commonjs",
    "baseUrl": ".",
    "rootDir": ".",
    "strict": true,
    "paths": {},
    "typeRoots": []
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*/node_modules",
    "modules/**/*",
    "projects/**/*"
  ]
}
